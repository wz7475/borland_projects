void __fastcall TForm1::Button1Click(TObject *Sender)
{
        AnsiString text ="http://"+ Edit1->Text;
        plik.open("linki.txt", ios::out | ios::app);
        plik<<text.c_str()<<endl;
        plik.close();
}
